package com.bedrockframework.plugin.timer{	/*	imports	*/	import com.bedrockframework.core.base.DispatcherWidget;	import com.bedrockframework.plugin.event.TriggerEvent;		import flash.utils.*;	/*	class	*/	public class IntervalTrigger extends DispatcherWidget	{		/*		Variables		*/		private var _numMilliseconds:Number;		private var _numSeconds:Number;		private var _numID:uint;		private var _bolRunning:Boolean;		private var _numRepetitions:int;		private var _numCount:Number;		/*		Constructor		*/		public function IntervalTrigger($interval:Number = 0.5):void		{			this._numSeconds = $interval;			this._bolRunning = false;			this._numRepetitions = -1;		}		/*		public functions		*/		public function start( $interval:Number = -1 , $repetitions:int = -1):void		{			if (!this._bolRunning) {				this._numSeconds = ($interval != -1) ? $interval : this._numSeconds;				this._numMilliseconds = this._numSeconds * 1000;				this._numID = setInterval(this.trigger, this._numMilliseconds);				this._numRepetitions = $repetitions;				this._numCount = 0;				this._bolRunning = true;				this.dispatchEvent(new TriggerEvent(TriggerEvent.START, this, {seconds:this._numSeconds, milliseconds:this._numMilliseconds, loops:this._numRepetitions}));				this.status("Start");			}		}		public function stop():void		{			if (this._bolRunning) {				clearInterval(this._numID);				this._numCount = 0;				this._bolRunning = false;				this.dispatchEvent(new TriggerEvent(TriggerEvent.STOP, this,{seconds:this._numSeconds, milliseconds:this._numMilliseconds, loops:this._numRepetitions}));				this.status("Stop");			}					}		public function trigger():void		{			this.dispatchEvent(new TriggerEvent(TriggerEvent.TRIGGER, this,{index:this._numCount, loops:this._numRepetitions}));			this._numCount++;			if (this._numRepetitions > 0) {				if (this._numCount >= this._numRepetitions) {					this.stop();				}			}		}		/*		Accessor Definitions		*/		public function get count():Number		{			return this._numCount;		}		public function get seconds():Number		{			return this._numSeconds;		}		public function get milliseconds():Number		{			return this._numMilliseconds / 1000;		}		public function get loops():Number		{			return this._numRepetitions;		}		public function get running():Boolean		{			return this._bolRunning;		}		public function get elapsed():Number		{			return (this._numCount * this._numMilliseconds);		}	}}